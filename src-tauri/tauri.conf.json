{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Motochō",
  "version": "0.3.1",
  "identifier": "com.claude-code.dashboard",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:9999",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Motochō",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
